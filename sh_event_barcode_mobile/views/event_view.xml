<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sh_event_barcode_mobile_event_form" model="ir.ui.view">
			<field name="name">sh.event.barcode.mobile.event.form</field>
			<field name="model">event.event</field> 
			<field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">




          	<field name="date_tz" position="after">
				<field name="sh_event_barcode_mobile"/>  
			    <field name="sh_event_bm_is_cont_scan"/>   					
          	</field> 
      
	
        <xpath expr="//notebook" position="before">       
        
			 <script type="text/javascript" src="/sh_event_barcode_mobile/static/src/js/ZXing.js"></script>
			 <script type="text/javascript" src="/sh_event_barcode_mobile/static/src/js/sh_event_barcode_mobile.js"></script>	 
			 
	        <section class="oe_edit_only">		
	            <div>
	                <a style="color:#fff;border-radius:0px;margin-bottom:5px;margin-right:5px;" class="btn btn-primary" id="js_id_sh_event_barcode_mobile_start_btn">
	                	<i class="fa fa-barcode"></i>
	                	Start
	                </a>
	                <a style="display:none;color:#fff;border-radius:0px;margin-bottom:5px;margin-right:5px;" class="btn btn-danger" id="js_id_sh_event_barcode_mobile_reset_btn">
	                    <i class="fa fa-barcode"></i>
	                	Stop
	                </a>
	            </div>
	
	  			
	            <div id="js_id_sh_event_barcode_mobile_vid_div" style="display:none;">
	            
			  		<group style="margin-bottom: 10px;">
							<div class="form-group row" style="margin-bottom:0px;">
		 					<strong style="align-self: center;" class="col-3">Camera</strong>
		          				<select class="col-8 form-control" id="js_id_sh_event_barcode_mobile_cam_select">
		             			</select>
							</div>	
			         </group>
		                     
	                <video id="video" class="cls_sh_all_in_one_mbs_video_tag" width="600" height="400" style="border: 1px solid gray"></video>
	                
	            	<span style="display:block;">Result:</span>
	            	<code id="js_id_sh_event_barcode_mobile_result"></code>
	  			</div>	  			
	  			
	
	        </section>             	
                	
		</xpath> 


             	
                	
            	</field>


		</record>
	</data>
</odoo>	
